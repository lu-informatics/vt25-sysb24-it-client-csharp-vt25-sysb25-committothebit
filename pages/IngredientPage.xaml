<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Name="IngredientPageRoot"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.IngredientPage"
             Title="Ingredients">
  <ScrollView>
    <VerticalStackLayout Padding="20" Spacing="10">
      <!-- LÃ¤gg till ingrediens-knapp -->
      <Button Text="Add Ingredient"
              Command="{Binding AddCommand}"
              HorizontalOptions="Fill"
              FontAttributes="Bold"
              CornerRadius="5"
              HeightRequest="50" />
      <!-- Refresh-knapp -->
      <Button Text="Refresh Ingredients"
              Command="{Binding RefreshCommand}"
              HorizontalOptions="Fill"
              FontAttributes="Bold"
              CornerRadius="5"
              HeightRequest="50" />
      <!-- Lista med ingredienser -->
      <CollectionView ItemsSource="{Binding Ingredients}">
        <CollectionView.ItemTemplate>
          <DataTemplate>
            <Frame Margin="5" Padding="10" CornerRadius="5" BorderColor="#cccccc">
              <VerticalStackLayout>
                <Label Text="{Binding Name}" FontAttributes="Bold" />
                <Label Text="{Binding Category}" />
                <Label Text="{Binding Unit}" />
                <Label Text="{Binding DietTag}" />
                <!-- Editera och ta bort knappar -->
                <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                  <Button Text="Edit"
                Command="{Binding Source={x:Reference IngredientPageRoot}, Path=BindingContext.EditCommand}"
                CommandParameter="{Binding .}" />
        <Button Text="Delete"
                Command="{Binding Source={x:Reference IngredientPageRoot}, Path=BindingContext.DeleteCommand}"
                CommandParameter="{Binding .}" />

                </HorizontalStackLayout>
              </VerticalStackLayout>
            </Frame>
          </DataTemplate>
        </CollectionView.ItemTemplate>
      </CollectionView>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>
