<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.AddRecipePage"
             Title="Add Recipe">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <!-- Recipe ID (read-only) -->
            
            <Entry x:Name="NameEntry" Placeholder="Name" />
            <Entry x:Name="DataEntry" Placeholder="Data (Recipe details)" />
            <Entry x:Name="CookingTimeEntry" Placeholder="Cooking Time (in mins)" Keyboard="Numeric"/>
            <Entry x:Name="ServingsEntry" Placeholder="Servings" Keyboard="Numeric"/>
            <Entry x:Name="DifficultyLevelEntry" Placeholder="Difficulty Level" />
            <Entry x:Name="IngredientNamesEntry" Placeholder="Ingredient Names (comma separated)" />
            <Button Text="Save" BackgroundColor="#2a5298" Clicked="OnSaveClicked" HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
